<!-- Declares IDE extensions and components for Skaffold support in Container Tools -->
<idea-plugin>
    <depends>org.jetbrains.plugins.yaml</depends>

    <project-components>
        <component>
            <implementation-class>
                com.google.kubernetes.tools.skaffold.SkaffoldConfigurationDetector
            </implementation-class>
        </component>
        <component>
            <implementation-class>
                com.google.kubernetes.tools.skaffold.SkaffoldConfigurationRunManagerListener
            </implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <configurationType
                implementation="com.google.kubernetes.tools.skaffold.run.SkaffoldRunConfigurationType"/>

        <applicationService
                serviceImplementation="com.google.kubernetes.tools.skaffold.SkaffoldFileService"/>

        <applicationService
                serviceInterface="com.google.kubernetes.tools.skaffold.SkaffoldExecutorService"
                serviceImplementation="com.google.kubernetes.tools.skaffold.DefaultSkaffoldExecutorService"/>

        <liveTemplateContext implementation="com.google.kubernetes.tools.skaffold.editing.SkaffoldContextType"/>
        <defaultLiveTemplatesProvider
                implementation="com.google.kubernetes.tools.skaffold.editing.SkaffoldLiveTemplatesProvider"/>

        <programRunner implementation="com.google.kubernetes.tools.skaffold.run.SkaffoldDebugProgramRunner" />
    </extensions>

    <extensions defaultExtensionNs="JavaScript">
        <JsonSchema.ProviderFactory implementation="com.google.kubernetes.tools.skaffold.editing.SkaffoldSchemaProviderFactory" />
    </extensions>
</idea-plugin>
